  use_frameworks!

  # Pods for MeetTogether
  pod_modules
 
  target 'MeetTogetherTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'MeetTogetherUITests' do
    # Pods for testing
  end
end
